@model List<BigBank.Models.Customer>

@{
    ViewBag.Title = "View Customers";
    string currentSort = ViewBag.SortColumn as string ?? "CreatedOn";
    string currentDir = ViewBag.SortDir as string ?? "desc";
    Func<string,string> sortLink = col => {
        var dir = (currentSort == col && currentDir == "asc") ? "desc" : "asc";
        return Url.Action("EmployeeViewCustomers", "Home", new { sort = col, dir = dir });
    };
    Func<string,string> sortIndicator = col => {
        if (string.Equals(currentSort, col, StringComparison.OrdinalIgnoreCase))
        {
            return currentDir == "asc" ? " &uarr;" : " &darr;";
        }
        return string.Empty;
    };
}

<div class="container py-4">
    <h2>Customers</h2>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">All Customers</h5>
            
            <div class="mb-3">
                <input type="text" id="searchBox" class="form-control" placeholder="Search..." />
                <small class="text-muted">Total: <span id="totalCount">@(Model?.Count ?? 0)</span> customer(s)</small>
            </div>

            <div class="table-responsive" style="height:400px; overflow:auto;">
                <table class="table table-sm mb-0" id="customersTable">
                    <thead class="thead-light">
                        <tr>
                            <th style="width:6%;">Sr. No.</th>
                            <th style="width:15%;"><a href="@sortLink("CustID")">Customer ID</a>@Html.Raw(sortIndicator("CustID"))</th>
                            <th><a href="@sortLink("CustName")">Name</a>@Html.Raw(sortIndicator("CustName"))</th>
                            <th style="width:15%;"><a href="@sortLink("PAN")">PAN</a>@Html.Raw(sortIndicator("PAN"))</th>
                            <th style="width:15%;">Phone</th>
                            <th style="width:15%;"><a href="@sortLink("CreatedOn")">Created On</a>@Html.Raw(sortIndicator("CreatedOn"))</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            for (int i = 0; i < Model.Count; i++)
                            {
                                var c = Model[i];
                                <tr>
                                    <td>@(i+1)</td>
                                    <td>@c.CustID</td>
                                    <td>@c.CustName</td>
                                    <td>@c.PAN</td>
                                    <td>@c.PhoneNum</td>
                                    <td>@(c.CreatedOn.HasValue ? c.CreatedOn.Value.ToString("dd-MMM-yyyy") : "")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-muted">No customers found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div id="noResults" class="alert alert-info mt-3" style="display:none;">
                No customers found matching your search.
            </div>
        </div>
    </div>
</div>

<style>
    .card .table-responsive { max-height: 400px; }
</style>

<script>
(function() {
    var searchBox = document.getElementById('searchBox');
    var table = document.getElementById('customersTable');
    var tbody = table.getElementsByTagName('tbody')[0];
    var rows = tbody.getElementsByTagName('tr');
    var totalCount = document.getElementById('totalCount');
    var noResults = document.getElementById('noResults');

    searchBox.addEventListener('keyup', function() {
        var searchTerm = this.value.toLowerCase().trim();
        var visibleCount = 0;

        for (var i = 0; i < rows.length; i++) {
            var row = rows[i];
            var cells = row.getElementsByTagName('td');
            
            if (cells.length < 6) {
                continue;
            }

            var found = false;

            for (var j = 1; j <= 5; j++) {
                if (cells[j]) {
                    var cellText = cells[j].textContent || cells[j].innerText;
                    cellText = cellText.replace(/\s+/g, ' ').trim().toLowerCase();
                    
                    if (cellText.indexOf(searchTerm) > -1) {
                        found = true;
                        break;
                    }
                }
            }

            if (found || searchTerm === '') {
                row.style.display = '';
                visibleCount++;
            } else {
                row.style.display = 'none';
            }
        }

        totalCount.textContent = visibleCount;

        if (visibleCount === 0 && searchTerm !== '') {
            noResults.style.display = 'block';
        } else {
            noResults.style.display = 'none';
        }
    });
})();
</script>
