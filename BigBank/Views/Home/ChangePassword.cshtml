@{
    ViewBag.Title = "Change Password";
}

<div class="container py-4">
    <div class="card mx-auto" style="max-width:480px;">
        <div class="card-body">
            <h4>Change Password</h4>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Message"]
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>
            }

            @using (Html.BeginForm("ChangePassword", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <input name="CurrentPassword" type="password" class="form-control" placeholder="Current password" />
                    @Html.ValidationMessage("CurrentPassword", null, new { @class = "text-danger small" })
                </div>
                <div class="mb-3">
                    <input name="NewPassword" type="password" class="form-control" placeholder="New password" />
                    @Html.ValidationMessage("NewPassword", null, new { @class = "text-danger small" })
                </div>
                <div class="mb-3">
                    <input name="ConfirmPassword" type="password" class="form-control" placeholder="Confirm new password" />
                    @Html.ValidationMessage("ConfirmPassword", null, new { @class = "text-danger small" })
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Change Password</button>
                    @if (Session["UserType"] != null && Session["UserType"].ToString() == "Customer")
                    {
                        <a class="btn btn-secondary" href="@Url.Action("CustomerHome","Home")">Cancel</a>
                    }
                    else if (Session["UserType"] != null && Session["UserType"].ToString() == "Manager")
                    {
                        <a class="btn btn-secondary" href="@Url.Action("ManagerHome","Home")">Cancel</a>
                    }
                    else
                    {
                        <a class="btn btn-secondary" href="@Url.Action("Index","Home")">Cancel</a>
                    }
                </div>
            }
        </div>
    </div>
</div>