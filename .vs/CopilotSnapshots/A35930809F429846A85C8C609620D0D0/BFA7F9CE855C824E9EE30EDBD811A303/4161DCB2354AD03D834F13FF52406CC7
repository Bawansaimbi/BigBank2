        // Open Loan (duplicate 2 renamed to avoid conflict)
        public ActionResult OpenLoan_Dup2()
        {
            if (Session["UserType"] == null || Session["UserType"].ToString() != "Customer")
                return RedirectToAction("Login");

            return View("OpenLoan");
        }

