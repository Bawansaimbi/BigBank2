            }

            @if (isLoginPage)
            {
                <!-- Centered title for Login page -->
                <div class="w-100 text-center">
                    <span class="navbar-text" style="font-weight:700; font-size:1.25rem; color:#d4a017;">Bigbank - Where trust grows with every transaction</span>
