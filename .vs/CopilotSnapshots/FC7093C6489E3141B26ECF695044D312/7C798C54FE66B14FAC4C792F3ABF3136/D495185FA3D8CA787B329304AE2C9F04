                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    @if (Session["UserType"] == null)
                    {
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item"><span class="navbar-text">Welcome to BigBank</span></li>
                        </ul>
                        <ul class="navbar-nav">
                            <li>@Html.ActionLink("Login", "Login", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        </ul>
                    }
                    else if (Session["UserType"].ToString() == "Customer")
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li>@Html.ActionLink("Dashboard", "CustomerHome", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item"><span class="navbar-text">Hello, @Session["Username"]</span></li>
                            <li>@Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
