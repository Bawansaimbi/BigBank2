@model BigBank.Models.RegisterViewModel

@{
    ViewBag.Title = "Register - BigBank";
}

<div class="d-flex align-items-center justify-content-center vh-100 interactive-bg">
    <div class="card shadow-sm rounded-4 p-4" style="width:100%; max-width:900px; animation: fadeIn 600ms ease;">
        <div class="text-center mb-3">
            <h1 class="mb-0" style="font-weight:700; font-size:1.75rem; color:#d4a017;">BigBank</h1>
            <p class="small text-muted">Create your BigBank account</p>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">@TempData["Message"]</div>
        }

        @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
        {
            @Html.AntiForgeryToken()

            <div class="row g-3">
                <div class="col-md-6">
                    <h5 class="mb-2">Personal Details</h5>

                    <div class="mb-3">
                        @Html.TextBoxFor(m => m.CustName, new { @class = "form-control text-center mx-auto", placeholder = "Full name", style = "max-width:420px;" })
                        @Html.ValidationMessageFor(m => m.CustName, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3">
                        @Html.DropDownListFor(m => m.Gender, new System.Web.Mvc.SelectList(new[] { new { Value = "M", Text = "Male" }, new { Value = "F", Text = "Female" } }, "Value", "Text"), "Select gender", new { @class = "form-select mx-auto text-center", style = "max-width:420px;" })
                        @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3">
                        @Html.TextBoxFor(m => m.DOB, "", new { @class = "form-control text-center mx-auto", type = "date", style = "max-width:420px;" })
                        @Html.ValidationMessageFor(m => m.DOB, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3">
                        @Html.TextBoxFor(m => m.PAN, new { @class = "form-control text-center mx-auto", placeholder = "e.g. ABCD1234", maxlength = 8, style = "max-width:420px;" })
                        @Html.ValidationMessageFor(m => m.PAN, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3">
                        @Html.TextBoxFor(m => m.PhoneNum, new { @class = "form-control text-center mx-auto", type = "tel", placeholder = "9876543210", maxlength = 10, style = "max-width:420px;" })
                        @Html.ValidationMessageFor(m => m.PhoneNum, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3">
                        @Html.TextAreaFor(m => m.Address, 4, 40, new { @class = "form-control mx-auto", placeholder = "Address", style = "max-width:420px; text-align:left;" })
                        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger small" })
                    </div>
                </div>

                <div class="col-md-6">
                    <h5 class="mb-2">Account Details</h5>

                    <div class="mb-3">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control text-center mx-auto", placeholder = "Choose a username", style = "max-width:420px;" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control text-center mx-auto", placeholder = "Password", style = "max-width:420px;" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control text-center mx-auto", placeholder = "Confirm password", style = "max-width:420px;" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3 text-center">
                        <button type="submit" class="btn btn-primary btn-lg px-4">Create Account</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
