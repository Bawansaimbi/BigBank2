@model List<BigBank.Models.LoanAccount>

@{
    ViewBag.Title = "Loan Accounts";
}

<div class="container py-4">
    <h2>Loan Accounts</h2>
    <div class="card">
        <div class="card-body">
            <table class="table table-sm">
                <thead><tr><th>Sr. No.</th><th>Loan Account ID</th><th>Customer ID</th><th>Loan Amount</th><th>Start</th><th>End</th></tr></thead>
                <tbody>
                    @for (int i=0;i<Model.Count;i++) {
                        var a = Model[i];
                        <tr>
                            <td>@(i+1)</td>
                            <td>@a.LoanAccountID</td>
                            <td>@a.CustomerID</td>
                            <td>@("Rs " + a.LoanAmount.ToString("N2"))</td>
                            <td>@a.StartDate.ToShortDateString()</td>
                            <td>@a.EndDate.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>